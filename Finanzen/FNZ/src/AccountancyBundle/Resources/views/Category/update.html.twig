{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% oro_title_set({params : {"%entityName%": entity.name }}) %}

{% if form.vars.value.id %}
    {% set formAction = path('fnz.category.category_update', { 'id': form.vars.value.id }) %}
{% else %}
    {% set formAction = path('fnz.category.category_create') %}
{% endif %}

{% block navButtons %}
    {% if form.vars.value.id and is_granted('DELETE', form.vars.value) %}
{#        {{ UI.deleteButton({#}
{#            'dataUrl': path('category_api_delete_category', {'id': form.vars.value.id}),#}
{#            'dataRedirect': path('fnz.category.category_index'),#}
{#            'aCss': 'no-hash remove-button',#}
