{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% oro_title_set({params : {"%entityName%": entity.name }}) %}

{% block navButtons %}
    {% if is_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('fnz.category.category_update', { id: entity.id }),
            'entity_label': 'accountancy.category.entity_label'|trans
        }) }}
    {% endif %}

    {% if is_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('category_api_delete_category', {'id': entity.id}),
            'dataRedirect': path('fnz.category.category_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-category',
            'dataId': entity.id,
            'entity_label': 'accountancy.category.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity':      entity,
        'indexPath':   path('fnz.category.category_index'),
        'indexLabel': 'accountancy.category.entity_plural_label'|trans,
        'entityTitle': entity.name
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set data %}
        <div class="widget-content">
            <div class="row-fluid form-horizontal">
                <div class="responsive-block">
                    {{ UI.renderProperty('accountancy.category.name.label'|trans,                entity.name) }}
                    {{ UI.renderProperty('accountancy.category.type.label'|trans,                entity.type) }}
                    {% if entity.parentCategory %}
                        {{ UI.renderProperty('accountancy.category.parent_category.label'|trans, entity.parentCategory.name) }}
                    {% endif %}
                </div>
            </div>
        </div>
    {% endset %}
    {% set dataBlocks = [
        {
            'title': 'accountancy.category.block.general'|trans,
            'class': 'active',
            'subblocks': [
                { 'data' : [data] }
            ]
        }
    ] %}

    {% set id = 'categoryView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}
    {{ parent() }}
{% endblock content_data %}
