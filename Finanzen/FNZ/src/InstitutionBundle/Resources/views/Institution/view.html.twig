{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroAddressBundle::macros.html.twig' as address %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% oro_title_set({params : {"%entityName%": entity.name }}) %}

{% block navButtons %}
    {% if is_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('fnz.institution.institution_update', { id: entity.id }),
            'entity_label': 'institution.entity_label'|trans
        }) }}
    {% endif %}

    {% if is_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('institution_api_delete_institution', {'id': entity.id}),
            'dataRedirect': path('fnz.institution.institution_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-institution',
            'dataId': entity.id,
            'entity_label': 'institution.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity':      entity,
        'indexPath':   path('fnz.institution.institution_index'),
        'indexLabel': 'institution.entity_plural_label'|trans,
        'entityTitle': entity.name
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set data %}
        <div class="widget-content">
            <div class="row-fluid form-horizontal">
                <div class="responsive-block">
                    {{ UI.renderProperty('institution.name.label'|trans,          entity.name) }}
                    {{ UI.renderProperty('institution.branch_number.label'|trans, entity.branchNumber) }}
                    {{ UI.renderProperty('institution.iban.label'|trans,          entity.iban) }}
                    {{ UI.renderProperty('institution.bic.label'|trans,           entity.bic) }}
                    {{ UI.renderHtmlProperty('institution.address.label'|trans,   address.renderAddress(entity.address)) }}
                </div>
            </div>
        </div>
    {% endset %}
    {% set dataBlocks = [
        {
            'title': 'institution.block.general'|trans,
            'class': 'active',
            'class': 'active',
            'subblocks': [
                { 'data' : [data] }
            ]
        }
    ] %}

    {% set gridAccount = 'institution-view-accounts-grid' %}
    {% set dataBlocks = dataBlocks|merge([{
        'title' : 'account.entity_plural_label'|trans,
        'priority': 100,
        'subblocks': [{
            'title' : null,
            'useSpan': false,
            'data' : [
                dataGrid.renderGrid(gridAccount, {institution_id: entity.id}, { cssClass: 'inner-grid', 'enableFullScreenLayout': true, 'enableViews': false })
            ]
        }]
    }] ) %}

    {% set id = 'institutionView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}
    {{ parent() }}
{% endblock content_data %}
