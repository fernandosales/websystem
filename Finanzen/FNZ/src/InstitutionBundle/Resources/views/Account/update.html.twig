{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% oro_title_set({params : {"%entityName%": entity.name }}) %}

{% if form.vars.value.id %}
    {% set formAction = path('fnz.account.account_update', { 'id': form.vars.value.id }) %}
{% else %}
    {% set formAction = path('fnz.account.account_create') %}
{% endif %}

{% block navButtons %}
    {% if form.vars.value.id and is_granted('DELETE', form.vars.value) %}
        {{ UI.deleteButton({
            'dataUrl': path('account_api_delete_account', {'id': form.vars.value.id}),
            'dataRedirect': path('fnz.account.account_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-tag',
            'dataId': form.vars.value.id,
            'entity_label': 'account.entity_label'|trans
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('fnz.account.account_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if is_granted('fnz.account.account_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({ 'html': html }) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('fnz.account.account_index'),
            'indexLabel': 'account.entity_label'|trans,
            'entityTitle': form.vars.value.name
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'account.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'account-edit' %}

    {% set dataBlocks = [{
            'title': 'account.block.general'|trans,
            'class': 'active',
            'subblocks': [{
                'title': '',
                'data': [
                    form_row(form.name),
                    form_row(form.number),
                    form_row(form.currency),
                    form_row(form.openingBalance),
                    form_row(form.minimumBalanceToNotify),
                    form_row(form.openingDate),
                    form_row(form.favorite),
                    form_row(form.accountingType),
                    form_row(form.type),
                    form_row(form.institution),
                ]
            }]
        }]
    %}
    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
